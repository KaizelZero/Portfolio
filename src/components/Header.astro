---
import { siteConfig } from "@/data/config";
import { removeTrailingSlash } from "@/utils";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header
  class="flex w-full flex-col text-muted-foreground md:flex-row md:justify-between"
>
  <a href={`mailto:${siteConfig.email}`} class="hover:text-foreground"
    >{siteConfig.email}</a
  >
  <!-- <a href="/" class="hover:text-foreground">{siteConfig.title}</a> -->

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      {
        siteConfig.nav.map((item, index) => (
          <div class="flex">
            <li>
              <a
                href={item.href}
                class:list={{
                  ["hover:text-foreground"]: true,
                  ["text-foreground"]: pathname === item.href,
                }}
              >
                {item.title}
              </a>
            </li>
            {index < siteConfig.nav.length - 1 && <li class="ml-2">/</li>}
          </div>
        ))
      }
    </ul>
  </nav>
</header>
