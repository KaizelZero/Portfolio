---
import { Image } from 'astro:assets'
import { cn } from '@/utils'

const {
  as: Tag = 'a',
  class: className,
  href,
  heading,
  subheading,
  imagePath,
  altText
} = Astro.props
---

<Tag
  class={cn(
    className,
    'flex flex-col sm:flex-row gap-y-3 rounded-2xl border border-border bg-primary-foreground w-full',
    href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
  )}
  href={href}
>
  <Image
    src={imagePath}
    alt={altText}
    class='h-40 w-auto rounded-2xl rounded-bl-none rounded-br-none object-cover sm:rounded-r-none sm:rounded-bl-2xl'
    loading='eager'
    width={1280}
    height={720}
  />
  <div class='flex flex-col gap-y-0.5 px-5 py-4'>
    <h1 class='text-lg font-medium'>{heading}</h1>
    <h2 class='text-muted-foreground'>{subheading}</h2>
  </div>

  <slot />
</Tag>
