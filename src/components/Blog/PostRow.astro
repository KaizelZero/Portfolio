---
import { formatDate } from "@/lib/utils";

interface Props {
  title: string;
  date: Date;
  url: string;
}

const { title, date, url } = Astro.props;
---

<li
  class="w-full hover:text-white/70 text-white ease-in-out transition-colors border-b-neutral-400 border-dashed border-b-[1px] my-2"
>
  <a
    class="text-sm md:text-base decoration-none flex justify-between"
    href={`/blog/${url}`}
  >
    <p class="inline-block whitespace-nowrap">
      {title}
    </p>
    <time
      class="text-right tabular-nums"
      datetime={date.toISOString()}
      data-date={date.toISOString()}
    >
      {formatDate(date)}
    </time>
  </a>
</li>
