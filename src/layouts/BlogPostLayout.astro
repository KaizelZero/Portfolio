---
import { formatDate } from "@/lib/utils";
import type { MarkdownLayoutProps } from "astro";
import Layout from "@/layouts/Layout.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  description: string;
  pubDate: string;
  minutesRead: string;
}>;

const { slug } = Astro.params;
const { frontmatter } = Astro.props;
---

<Layout
  title={`Jimmy Truong - ${frontmatter.title}`}
  description={frontmatter.description}
>
  <main class="mx-auto max-w-3xl w-full h-screen p-8">
    <a
      href="/blog"
      class="text-white bg-neutral-900 hover:bg-neutral-800 px-4 py-2 mb-8 border-1 border-solid border-neutral-600 rounded-lg hover:no-underline"
    >
      Back
    </a>
    <div class="my-10">
      <h1 class="text-5xl font-semibold">{frontmatter.title}</h1>
      <div class="flex justify-between pt-4 text-gray-500 text-sm">
        <p>{formatDate(new Date(frontmatter.pubDate))}</p>
        <p>{frontmatter.minutesRead}</p>
      </div>
    </div>
    <article class="">
      <slot />
    </article>
  </main>
</Layout>
